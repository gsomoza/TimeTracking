<?xml version="1.0"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xsi="http://www.w3.org/2001/XMLSchema-instance" schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="Db\Entity\Worklog" table="worklogs">
    <id name="id" type="integer">
      <generator strategy="AUTO"/>
    </id>
    <field name="duration" type="float" nullable="false"/>
    <field name="date" type="date" nullable="false"/>
    <field name="notes" type="text" nullable="true"/>
    <many-to-one field="user" target-entity="Db\Entity\User" inversed-by="worklog">
      <join-columns>
        <join-column name="user_id" referenced-column-name="username"/>
      </join-columns>
    </many-to-one>
  </entity>
</doctrine-mapping>
